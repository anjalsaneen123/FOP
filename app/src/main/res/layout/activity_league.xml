<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg"
    android:background="@drawable/cl">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/link"
        android:src="@android:drawable/ic_menu_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:id="@+id/button1"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:background="@drawable/a1"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/button2"
                android:layout_width="145dp"
                android:layout_marginLeft="15dp"
                android:layout_height="45dp"
                android:background="@drawable/a2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:id="@+id/button3"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:background="@drawable/a3"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/button4"
                android:layout_width="145dp"
                android:layout_marginLeft="15dp"
                android:layout_height="45dp"
                android:background="@drawable/a4"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button5"
                android:visibility="gone"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:background="@drawable/a5"
                />
            <ImageView
                android:id="@+id/button6"
                android:visibility="gone"
                android:layout_width="145dp"
                android:layout_marginLeft="15dp"
                android:layout_height="45dp"
                android:background="@drawable/a6"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button7"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:background="@drawable/a7"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/button8"
                android:layout_width="145dp"
                android:layout_marginLeft="15dp"
                android:layout_height="45dp"
                android:background="@drawable/a8"
                android:visibility="gone"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button9"
                android:layout_width="145dp"
                android:layout_height="45dp"
                android:background="@drawable/a9"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/button10"
                android:layout_width="145dp"
                android:layout_marginLeft="15dp"
                android:layout_height="45dp"
                android:background="@drawable/a10"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button"
                android:layout_marginLeft="32dp"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:background="@drawable/a11"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fixture"
                android:layout_marginLeft="32dp"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:background="@drawable/fixture"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tml"
                android:layout_marginLeft="32dp"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:background="@drawable/tml"
                android:visibility="gone"
                />

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"/>

</RelativeLayout>