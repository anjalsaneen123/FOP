<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Anjal Saneen"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="16dp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/id_"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Id                   = "/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/id"
        android:layout_toRightOf="@+id/id_"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="12345"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/team_name_"
        android:layout_below="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Team Name = "/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/team_name"
        android:layout_toRightOf="@+id/team_name_"
        android:layout_below="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="12345"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/date_"
        android:layout_below="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Joined time  = "/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/date"
        android:layout_toRightOf="@+id/date_"
        android:layout_below="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="12345"/>
    <View
        android:layout_below="@id/date"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1px"
        android:background="#c0c0c0"/>

</RelativeLayout>